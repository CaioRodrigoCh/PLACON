<strong>
  <% likes.each.with_index do |like, index| %>
      <% if likes.size == 1 %>
          <%= like.user.name %> </strong> está ciente disso
      <% elsif like == likes.last %>
          </strong>e<strong>
  <%= + like.user.name %></strong> está ciente disso
      <% elsif index > 1 %>
          </strong><%= "e " + (likes.size-index).to_s + " outros " %> estão cientes disso
          <% break %>
      <% elsif index==likes.size-2 || index==1%>
          <%= like.user.name %>
      <% else %>
          <%= like.user.name + ", " %>
      <% end %>
  <% end %>
</strong>