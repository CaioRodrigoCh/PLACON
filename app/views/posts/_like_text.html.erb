<strong>
  <% likes.each.with_index do |like, index| %>
      <% if likes.size == 1 %>
          <%= like.user.name %> </strong> curtiu isso
      <% elsif like == likes.last %>
          </strong>e<strong>
  <%= + like.user.name %></strong> curtiu isso
      <% elsif index > 1 %>
          </strong><%= "and " + (likes.size-index).to_s + " others " %> curtiram isso
          <% break %>
      <% elsif index==likes.size-2 || index==1%>
          <%= like.user.name %>
      <% else %>
          <%= like.user.name + ", " %>
      <% end %>
  <% end %>
</strong>