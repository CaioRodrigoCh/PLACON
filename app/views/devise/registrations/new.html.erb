<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left">
      <%= render "devise/shared/dummy_phone" %>
    </div>
    <div class="col-lg-6 landing-right text-center d-flex align-items-center">
      <div>
        <div class="form-login box">
          <h3><strong> PLACON </strong></h3>
          <h5 class="light-color"><strong>Registre-se para ver as atualizações <br> do seu condomínio!</strong></h5>

          <hr>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signin form') do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-group">
              <%= f.text_field :name, autofocus: true, placeholder: "Seu usuário", class: "form-signin form" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-signin form" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", class: "form-signin form" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme a senha", class: "form-signin form" %>
            </div>

            <div class="actions">
              <%= f.submit "Registrar-se", class: "btn btn-primary" %>
            </div>
          <% end %>

          <br>

        <div class="redirect-links box">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
